<p id="notice"><%= notice %></p>

<h1>Listing Course Weeks</h1>

<table>
  <thead>
    <tr>
      <th>Module</th>
      <th>Week Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_weeks.each do |course_week| %>
      <tr>
        <td><%= course_week.course_module.module_num %></td>
        <td><%= course_week.week_num %></td>
        <td><%= link_to 'Show', course_week %></td>
        <td><%= link_to 'Edit', edit_course_week_path(course_week) %></td>
        <td><%= link_to 'Destroy', course_week, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

